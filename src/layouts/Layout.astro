---
import Head from "../components/Head.astro";
import Header from "../components/Header.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <Head title={title} />
  <body
    class="container max-w-4xl mx-auto text-gray-800 dark:text-gray-100 bg-gray-50 dark:bg-gray-800"
  >
    <Header />
    <main>
      <slot />
    </main>
  </body>
</html>
