---
import { CalendarIcon } from "@heroicons/react/solid/index.js";

export interface Props {
  url: string;
  title: string;
  category: string;
  description: string;
  date: Date;
  className?: string;
}

const { url, title, category, description, date, className } =
  Astro.props as Props;
---

<li class={className}>
  <a
    href={url}
    class="text-xl font-medium text-zinc-800 dark:text-zinc-100 hover:underline"
  >
    {title}
  </a>
  <a
    href={`/til/${category}`}
    class="ml-2 text-xs text-zinc-700 dark:text-zinc-300 hover:bg-zinc-900 hover:text-zinc-100 dark:hover:bg-zinc-100 dark:hover:text-zinc-900"
  >
    {category}
  </a>
  <div class="flex items-center shrink">
    <CalendarIcon className="w-3 h-3 text-zinc-500 dark:text-zinc-400 mr-2" />
    <time class="text-sm text-zinc-600 dark:text-zinc-400">
      {
        date.toLocaleDateString("en-US", {
          month: "short",
          day: "numeric",
          year: "numeric",
        })
      }
    </time>
  </div>
  <p class="mt-1 text-zinc-800 dark:text-zinc-200">
    {description}
  </p>
</li>
